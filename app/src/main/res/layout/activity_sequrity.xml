<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.profile.sequrity">

    <LinearLayout
        android:id="@+id/Hade"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#5A3F12"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:scaleX="-1"
            android:src="@drawable/arrow_forward"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/nmedium"
            android:text="Coffee App security "
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/Hade"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Help Topics -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.Account Security"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encourage users to create strong passwords with a mix of letters, numbers, and special characters.
Recommend enabling two-factor authentication (2FA) for an added layer of security.
Advise users to avoid sharing their login credentials with anyone."
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.Data Protection:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Describe how sensitive user data is encrypted to protect it from unauthorized access.
Explain the secure storage of payment information using industry-standard encryption protocols."
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.Privacy Policy:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provide a link to your app's privacy policy, detailing how user data is collected, used, and protected.
-Assure users that their privacy is a top priority and that their data will not be shared with third parties without consent."
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4.Security Updates:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="It's easy and will take only a few minutes at Starbucks India mobile app or visit our website The first-time load of Rs 200 is required to register the physical Starbucks card and you'll need your card's 14-digit number and the CSC (Card Security Code), which is a 4-digit number that can be found under the scratch-off coating on the back of your card. You can also add a Starbucks Card or an e-Card via the Starbucks India mobile app onto your registered Starbucks India account and follow the simple steps outlined to register your Starbucks e-Card or physical Starbucks Card."
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Reporting Security Issues:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="Provide clear instructions on how users can report security issues or suspicious activities within the app.
Assure users that prompt action will be taken to investigate and address reported security concerns."
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Safe Usage Practices:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="Educate users about safe browsing practices, such as avoiding clicking on suspicious links or downloading apps from untrusted sources.
Encourage users to log out from their accounts when using shared devices or public networks."
                android:textSize="16sp" />
            <!-- Add more help topics and content as needed -->
        </LinearLayout>
    </ScrollView>
</RelativeLayout>