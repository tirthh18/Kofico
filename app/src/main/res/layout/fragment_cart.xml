<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    tools:context=".fragment.cart">

    <View
        android:id="@+id/view"
        android:layout_marginTop="-30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/roundstyle20dp"
        android:backgroundTint="@color/colorprimary" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_with_radiusnew"
        android:fontFamily="@font/nmedium"
        android:gravity="center"
        android:padding="13dp"
        android:text="Basket"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_carts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_subtotal"
        android:layout_below="@id/tv_title"
        android:layout_marginBottom="5dp" />



    <TextView
        android:id="@+id/tv_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nbold"
        android:text="Subtotal"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nbold"
        android:gravity="right"
        android:text="Rs 0"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <Button
        android:id="@+id/checkout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg"
        android:backgroundTint="@color/colorprimary"
        android:fontFamily="@font/nbold"
        android:text="Checkout"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18dp" />


</RelativeLayout>